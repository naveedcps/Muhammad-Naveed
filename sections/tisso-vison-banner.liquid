{{ 'component-tisso-banner.css' | asset_url | stylesheet_tag }}

<section class="banner-sect">
  <div class="top-bar">
    <mobile-menu>
      <div class="menu-mobile-icon">
        <div class="icon-hamburger">
          {% render 'icon-hamburger' %}
        </div>
        <div class="icon-cross">
          {% render 'icon-cross' %}
        </div>
      </div>
      <div class="mobile-menu">
        <div class="announcement-bar">
          <p>{{ section.settings.announcement_bar_text }}</p>
        </div>

        <div class="header-btn">
          <a href="#">{{ section.settings.button_text }} {% render 'icon-arrow' %}</a>
        </div>
      </div>
    </mobile-menu>
    <div class="container">
      <div class="banner-header">
        <div class="logo">
          <img src="{{ section.settings.logo | img_url: 'master' }}" alt="Logo">
        </div>

        <div class="announcement-bar">
          <p>{{ section.settings.announcement_bar_text }}</p>
        </div>

        <div class="header-btn">
          <a href="#">{{ section.settings.button_text }} {% render 'icon-arrow' %}</a>
        </div>
      </div>
    </div>
  </div>

  <div class="mobile-content">
    <h1>{{ section.settings.banner_title }}</h1>

    <p>{{ section.settings.banner_subtitle }}</p>
  </div>

  <div class="banner">
    <div class="container">
      <div class="content">
        <h1>{{ section.settings.banner_title }}</h1>

        <p>{{ section.settings.banner_subtitle }}</p>

        <p>{{ section.settings.banner_description }}</p>

        <div class="banner-btn">
          <a href="#">{{ section.settings.banner_button_text }} {% render 'icon-arrow' %}</a>
        </div>
      </div>
    </div>
  </div>

  <div class="banner-btm-text desktop">
    <p>{{ section.settings.bottom_text }}</p>
  </div>
  <div class="banner-btm-text mobile">
    <p>{{ section.settings.bottom_text_mobile }}</p>
  </div>
</section>

{% schema %}
  {
    "name": "Tisso Vison Banner",
    "settings": [
      {
        "type": "header",
        "content": "Announcement Bar"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "text",
        "id": "announcement_bar_text",
        "label": "Announcement Bar Text",
        "default": "Find the ideal gift for your loved ones."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "CHOOSE GIFT"
      }, {
        "type": "header",
        "content": "Banner Settings"
      }, {
        "type": "text",
        "id": "banner_title",
        "label": "Banner Title",
        "default": "The Gift Guide"
      }, {
        "type": "text",
        "id": "banner_subtitle",
        "label": "Banner Subtitle",
        "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
      }, {
        "type": "text",
        "id": "banner_description",
        "label": "Banner Description",
        "default": "Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
      }, {
        "type": "text",
        "id": "banner_button_text",
        "label": "Banner Button Text",
        "default": "Shop Now"
      }, {
        "type": "header",
        "content": "Bottom Text"
      }, {
        "type": "text",
        "id": "bottom_text",
        "label": "Bottom Text",
        "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
      }, {
        "type": "text",
        "id": "bottom_text_mobile",
        "label": "Bottom Text",
        "default": "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR"
      }
    ],
    "presets": [
      {
        "name": "Tisso Vison Banner"
      }
    ]
  }
{% endschema %}